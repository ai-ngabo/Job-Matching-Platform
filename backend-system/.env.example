# Backend Environment Variables
# Copy this file to .env and fill in your actual values
# NOTE: .env is NOT committed to version control. Set these variables in your deployment platform (Render, Vercel, etc.)

# Server Configuration
PORT=5000
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=databaseSystem

# JWT Configuration
JWT_SECRET=your_super_secured_key_here

# Cloudinary (Image Uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# SMTP Configuration (Email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=JobIFY <your_email@gmail.com>

# Admin Alerts
ADMIN_ALERT_EMAIL=admin@jobify.com

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Frontend Configuration
FRONTEND_URL=https://your-frontend-domain.vercel.app
FRONTEND_BASE_URL=https://your-frontend-domain.vercel.app

# Password Reset
PASSWORD_TOKEN_EXPIRY_MIN=30
